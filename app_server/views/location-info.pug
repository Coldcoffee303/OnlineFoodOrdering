extends layout
block content

    .row.banner
        .col-12
            h1= location.name
    .row
        .col-12.col-lg-9
            .row
                .col-12.col-md-6
                    p.rating &nbsp;&nbsp;&nbsp;
                        i.fas.fa-star
                        i.fas.fa-star
                        i.fas.fa-star
                        i.far.fa-star
                        i.far.fa-star  
                    p 125 High Street, Reading, RG6 1PS
                    .card.card-primary
                        .card-block
                            h2.card-title Timings
                            p.card-text Days: #{location.days}
                            p.card-text Opening: #{location.opening}
                            p.card-text Closing: #{location.closing} 
                             
                    .card.card-primary
                        .card-block
                            h2.card-title Facilities
                            span.badge.badge-warning
                                i.fa.fa-star 
                            | &nbsp;Hot drinks
                            | &nbsp;
                            span.badge.badge-warning
                                i.fa.fa-star 
                            | &nbsp;Food 
                            | &nbsp;
                            span.badge.badge-warning
                                i.fa.fa-star 
                            | &nbsp;Premium wifi
                            | &nbsp;
                .col-12.col-md-6.location-map
                    .card.card-primary
                        .card-block
                            h2.card-title Location map
                            .locmap
    .row
        .col-12
            .card.card-primary.review-card
                .card-block
                    a.btn.btn-primary.float-left(href='/location/'+ location.id + '/reviews/new') Add review
                    h2.card-title Customer reviews
                        each r in location.reviews
                            .row.review
                                .col-12.no-gutters.review-header
                                    span.rating
                                        i.fas.fa-star
                                        i.fas.fa-star
                                        i.fas.fa-star
                                        i.far.fa-star
                                        i.far.fa-star                   
                                    span.review.dash Author: #{r.review.author}
                                    br
                                    span.review.dash Timestamp : #{r.review.createdOn}
                                .col-12
                                    span.review.dash= r.review.reviewText
                            
                        
        .col-12.col-lg-3
